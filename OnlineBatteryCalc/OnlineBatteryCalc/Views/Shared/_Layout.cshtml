<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Battery Calc</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-fixed-top" style="background-color: ghostwhite">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("List", "Order")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><span class="glyphicon-class"> Замовлення</span></a></li>
                <li><a href="@Url.Action("Show", "About")"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><span class="glyphicon-class"> Клієнти</span></a></li>
                <li><a href="@Url.Action("Show", "About")"><span class="glyphicon glyphicon-usd" aria-hidden="true"></span><span class="glyphicon-class"> Кошторис</span></a></li>
                <li><a href="@Url.Action("Show", "About")"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><span class="glyphicon-class"> Склад</span></a></li>
                <li><a href="@Url.Action("Show", "About")"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span><span class="glyphicon-class"> Інформація</span></a></li>
            </ul>
        </div>
    </div>
</div>
<div>
    &nbsp;
</div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Online Battery Calc</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
